<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#6E00ACC1"
    android:padding="16dp">

    <!-- Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.40"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideTo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.55"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideTop3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideTop4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.85"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLeft1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLeft2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLeft3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="vertical" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="25dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideLeft3"
        app:layout_constraintTop_toTopOf="@+id/guideTop4" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="25dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideLeft1"
        app:layout_constraintTop_toTopOf="@+id/guideTop4" />

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="25dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft2"
        app:layout_constraintStart_toStartOf="@+id/guideLeft1"
        app:layout_constraintTop_toTopOf="@+id/guideTop4" />

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideTop4"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="1"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTop4"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideTop3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="2"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTop4"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft2"
        app:layout_constraintStart_toStartOf="@+id/guideLeft1"
        app:layout_constraintTop_toTopOf="@+id/guideTop3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="3"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTop4"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft3"
        app:layout_constraintStart_toStartOf="@+id/guideLeft2"
        app:layout_constraintTop_toTopOf="@+id/guideTop3" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="-"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTop4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideLeft3"
        app:layout_constraintTop_toTopOf="@+id/guideTop3" />

    <Button
        android:id="@+id/buttonX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="X"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTop3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideLeft3"
        app:layout_constraintTop_toTopOf="@+id/guideTo2" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="6"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTop3"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft3"
        app:layout_constraintStart_toStartOf="@+id/guideLeft2"
        app:layout_constraintTop_toTopOf="@+id/guideTo2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="5"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTop3"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft2"
        app:layout_constraintStart_toStartOf="@+id/guideLeft1"
        app:layout_constraintTop_toTopOf="@+id/guideTo2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="4"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTop3"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideTo2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="7"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTo2"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideTop1" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="8"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTo2"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft2"
        app:layout_constraintStart_toStartOf="@+id/guideLeft1"
        app:layout_constraintTop_toTopOf="@+id/guideTop1" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="9"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTo2"
        app:layout_constraintEnd_toStartOf="@+id/guideLeft3"
        app:layout_constraintStart_toStartOf="@+id/guideLeft2"
        app:layout_constraintTop_toTopOf="@+id/guideTop1" />

    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:text="÷"
        android:textSize="25dp"
        android:textColor="#8E24AA"
        app:layout_constraintBottom_toTopOf="@+id/guideTo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideLeft3"
        app:layout_constraintTop_toTopOf="@+id/guideTop1" />

    <TextView
        android:id="@+id/TextViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:text="0.0"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/guideTop1"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>